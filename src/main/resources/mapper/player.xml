<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.baseballManagement.domain.player.PlayerDao">

	<insert id="insert">
		INSERT INTO player(playerName, position, insertDate, teamId)
		VALUES(#{playerName}, #{position}, #{insertDate}, #{teamId})
	</insert>

	<select id="findAll"
		resultType="site.metacoding.baseballManagement.domain.player.Player">
		SELECT * FROM player
	</select>

	<insert id="deleteById">
		DELETE FROM player WHERE id = #{id}
	</insert>

</mapper>